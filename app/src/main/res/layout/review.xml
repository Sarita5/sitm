<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="_Review Here_"
        android:textSize="30dp"
        android:textColor="#07574F"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:typeface="serif"></TextView>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">
            <EditText
                android:layout_width="320dp"
                android:layout_height="45dp"
                android:id="@+id/rname"
                android:hint="Enter Your name"
                android:inputType="textPersonName"
                android:drawableLeft="@drawable/ic_baseline_person_24"
                android:background="@drawable/box"
                android:drawablePadding="10dp"
                android:layout_marginTop="20dp"></EditText>
            <EditText
                android:layout_width="320dp"
                android:layout_height="45dp"
                android:id="@+id/remail"
                android:background="@drawable/box"
                android:hint="Enter Your email"
                android:inputType="textEmailAddress"
                android:drawableLeft="@drawable/ic_baseline_email_24"
                android:drawablePadding="10dp"
                android:layout_marginTop="20dp"></EditText>
            <EditText
                android:layout_width="320dp"
                android:layout_height="45dp"
                android:background="@drawable/box"
                android:id="@+id/rreview"
                android:hint="Your valuable feedback"
                android:drawableLeft="@drawable/ic_baseline_rate_review_24"
                android:drawablePadding="10dp"
                android:inputType="textMultiLine"
                android:layout_marginTop="20dp"></EditText>
            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rb"
                android:rating="4.5"
                android:layout_marginTop="25dp"
                android:layout_gravity="center"
                android:textAlignment="center"></RatingBar>
            <Button
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:text="Submit"
                android:background="@drawable/rotate"
                android:gravity="center"
                android:elevation="4dp"
                android:paddingLeft="70dp"
                android:paddingRight="70dp"
                android:layout_marginTop="25dp"
                android:textColor="@color/white"
                android:id="@+id/btnreview"></Button>
        </LinearLayout>
    </ScrollView>


</LinearLayout>