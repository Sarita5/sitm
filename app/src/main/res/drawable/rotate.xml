<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="270"
                android:endColor="@color/black"
                android:startColor="@color/teal_700"></gradient>
            <corners android:radius="10dp"></corners>

            <padding
                android:bottom="5dp"
                android:left="5dp"
                android:right="5dp"
                android:top="5dp"></padding>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#0FB9BFBE"></solid>
            <corners android:radius="10dp"></corners>
            <size
                android:width="50dp"
                android:height="50dp"></size>
        </shape>
    </item>


</layer-list>